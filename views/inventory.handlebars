<main class="">
    <div class="container">
        <div class="d-flex justify-content-around align-items-center p-3">
            <h2 class="text-light">My Inventory</h2>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                Add +
            </button>

            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                 aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Add A Wine</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">

                            <form class="new-wine">
                                <div>
                                    <label for="wine">Choose your wine from the list:</label>
                                    <input list="wines" name="wine" id="wine">
                                    {{!-- will pull from API to fill with #each --}}
                                    {{!-- change to a textbox --}}
                                    <datalist id="wines">
                                        <option value="Pinot Grigio">
                                        <option value="Moscato d'Asti">
                                        <option value="Riesling">
                                        <option value="Pinot Noir">
                                        <option value="Apothic Red">
                                    </datalist>
                                </div>
                                {{!-- wine type --}}
                                <div>
                                    <label for="size">Select a bottle size:</label>
                                    <input list="sizes" name="size" id="size">
                                    {{!-- Current bottle sizes, leave this hardcoded --}}
                                    {{!-- TODO: change to select tag --}}
                                    <datalist id="sizes">
                                        <option value="750 ml">
                                        <option value="375 ml">
                                        <option value="500 ml">
                                    </datalist>
                                </div>
                                <div>
                                    <label for="retail-price">What is the retail price of the wine?</label>
                                    <input type="number" id="retail-price"/>
                                </div>
                                <div>
                                    <label for="notes">Any notes about this wine?</label>
                                    <input type="text" id="notes"/>
                                </div>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary"  id="close-btn" data-dismiss="modal">Close</button>
                            <button type="button submit" class="btn btn-primary" id="submit">Save changes</button>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    <ol class="container animate__animated animate__fadeInUp">
        {{#if wines.length}}
            {{#each wines as |wine|}}
                {{>edit-cards wine}}
            {{/each}}
        </ol>
        {{else}}
            <h6 class="text-center text-light font-italic m-3">You do not currently have any wines!</h6>
        {{/if}}
    </div>
</main>

