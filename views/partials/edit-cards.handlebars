<li class="row justify-content-center m-3">
    <div class="col-md-9">
        <div class="card shadow bg-white rounded">
            <div class="card-header">
                <div class="row card-title">
                    <span class="col-4 font-weight-bold wine-name wine-title" data-toggle="modal" data-target="#exampleModal" id="{{id}}"><i class="fas fa-wine-glass-alt"></i> {{name}}</span>
                    <span class="col-4 font-italic"></span>
                    <span class="col-4 text-right font-weight-bold">{{vote_count}} {{format_plural "vote" vote_count}}</span>
                </div>
            </div>
            <div class="card-body row">
                <img id="wine-pic-{{id}}" class="rounded" src='{{imageurl}}' alt="{{name}}">
                <div class="col-7">
                    <p>Owner: {{user.username}}</p>
                    <p>Bottle Size: {{bottle_size}}</p>
                    <p>Price Paid: ${{price_paid}}</p>
                    <p>Notes: {{notes}}</p>
                </div>
            </div>
        </div>
    </div>
</li>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="/javascript/edit.js"></script>